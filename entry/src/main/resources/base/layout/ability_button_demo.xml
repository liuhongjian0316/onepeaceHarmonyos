<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/apk/res/ohos"
    ohos:id="$+id:root_layout"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#D9D9D9"
    >

    <!--title-->
    <DependentLayout
        ohos:height="48vp"
        ohos:width="match_parent"
        ohos:background_element="#FF3991CB"
        ohos:id="$+id:top_bar">
        <DependentLayout
            ohos:id="$+id:title_area_back_icon_hot_area"
            ohos:height="48vp"
            ohos:width="match_parent"
            ohos:center_in_parent="true"
            ohos:vertical_center="true"
            ohos:horizontal_center="true"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:title_area_home_icon"
                ohos:align_parent_left="true"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:scale_mode="stretch"
                ohos:vertical_center="true"
                ohos:background_element="$graphic:back_icon"
                ohos:left_margin="6vp"/>

            <Text
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:id="$+id:title_text"
                ohos:text_alignment="vertical_center"
                ohos:vertical_center="true"
                ohos:text_size="16fp"
                ohos:center_in_parent="true"
                ohos:text_color="#FFFFFF"
                ohos:text="按钮"
                ohos:max_text_lines="1">
            </Text>
            <Image
                ohos:id="$+id:title_area_menu"
                ohos:height="20vp"
                ohos:width="24vp"
                ohos:scale_mode="stretch"
                ohos:align_parent_right="true"
                ohos:vertical_center="true"
                ohos:right_margin="10vp"
               />
        </DependentLayout>
    </DependentLayout>

    <!--主体-->
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:top_margin="48vp"
        ohos:orientation="vertical">
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="原生样式"
            ohos:text_color="#FF5B6969"
            ohos:left_padding="6vp"
            ohos:top_padding="3vp"
            ohos:bottom_padding="3vp"
            ohos:text_size="15fp"
            />
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Button
                ohos:width="0"
                ohos:height="match_content"
                ohos:weight="1"
                ohos:text_size="27fp"
                ohos:text="正常"
                ohos:background_element="#FF1FA46B"
                ohos:right_padding="8vp"
                ohos:left_padding="8vp"
                ohos:margin="2vp"
                ohos:element_left="$media:menu"
                ohos:element_right="$media:menu"
            />
            <Button
                ohos:width="0"
                ohos:height="match_content"
                ohos:weight="1"
                ohos:text_size="27fp"
                ohos:text="胶囊"
                ohos:background_element="$graphic:btn_round"
                ohos:right_padding="8vp"
                ohos:left_padding="8vp"
                ohos:margin="2vp"
                ohos:element_left="$media:menu"
                />
            <Button
                ohos:width="0"
                ohos:height="match_content"
                ohos:weight="1"
                ohos:text_size="27fp"
                ohos:text="椭圆"
                ohos:background_element="$graphic:btn_oval"
                ohos:right_padding="8vp"
                ohos:left_padding="8vp"
                ohos:margin="2vp"
                ohos:element_left="$media:menu"
                />
            <Button
                ohos:width="30vp"
                ohos:height="30vp"
                ohos:text_size="27fp"
                ohos:background_element="$graphic:btn_oval"
                ohos:margin="2vp"
                ohos:text_alignment="center"
                ohos:text="+"
                ohos:text_color="#FFFFFF"
                ohos:enabled="false"
                />
            <Button
                ohos:width="30vp"
                ohos:height="30vp"
                ohos:text_size="27fp"
                ohos:background_element="$graphic:btn_oval"
                ohos:margin="2vp"
                ohos:text_alignment="center"
                ohos:text="+"
                ohos:text_color="#FFFFFF"
                />
        </DirectionalLayout>


        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="自定义"
            ohos:text_color="#FF5B6969"
            ohos:left_padding="6vp"
            ohos:top_padding="3vp"
            ohos:bottom_padding="3vp"
            ohos:text_size="15fp"
            />

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Button
                ohos:width="0"
                ohos:height="match_content"
                ohos:weight="1"
                ohos:text_size="27fp"
                ohos:text="空心"
                ohos:text_color="#FF5F5959"
                ohos:background_element="$graphic:btn_hollow"
                ohos:right_padding="8vp"
                ohos:left_padding="8vp"
                ohos:margin="2vp"
                />

            <work.aijiu.onepeace.components.materialRippleLayout.MaterialRippleLayout
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:bottom_margin="30"
                ohos:background_element="$graphic:btn_hollow"
                ohos:layout_alignment="horizontal_center"
                ohos:left_margin="16vp"
                ohos:right_margin="16vp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#80000000"
                app:mrl_rippleOverlay="false">
                <Button
                    ohos:width="match_parent"
                    ohos:height="match_parent"
                    ohos:text_size="27fp"
                    ohos:text="点击效果"
                    ohos:text_color="#FF5F5959"
                    ohos:background_element="$graphic:btn_hollow"
                    ohos:right_padding="8vp"
                    ohos:left_padding="8vp"
                    ohos:margin="2vp"
                    />
            </work.aijiu.onepeace.components.materialRippleLayout.MaterialRippleLayout>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Button
                ohos:id="$+id:cutdown_btn"
                ohos:width="0"
                ohos:height="match_content"
                ohos:weight="1"
                ohos:text_size="27fp"
                ohos:text="倒计时"
                ohos:text_color="#FF5F5959"
                ohos:background_element="$graphic:btn_hollow"
                ohos:right_padding="8vp"
                ohos:left_padding="8vp"
                ohos:margin="2vp"
                />
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:orientation="horizontal"
                ohos:layout_alignment="center">
                <work.aijiu.onepeace.components.SwitchIconButton.SwitchIconButton
                    ohos:id="$+id:sib"
                    ohos:height="match_content"
                    ohos:width="100vp"
                    app:defalut_img="$media:mac_on"
                    app:close_img="$media:mac_off"
                    app:status="true"
                    ohos:clickable="true"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="22fp"
                    ohos:text_color="#FFC12B2B"
                    ohos:text_alignment="center"
                    ohos:id="$+id:mac_status"
                    />
            </DirectionalLayout>

        </DirectionalLayout>

    </DirectionalLayout>






</DependentLayout>